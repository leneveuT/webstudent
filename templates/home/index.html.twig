{% extends 'base.html.twig' %}

{% block title %}Maisons{% endblock %}

{% block body %}
    <table class="ui celled table">
      <thead>
        <tr>
            <th>id</th>
            <th>code</th>
            <th>nom</th>
            <th></th>
        </tr>
      </thead>
        {% for home in homes %}
            <tr>
                <td>{{ home.id }}</td>
                <td>{{ home.code }}</td>
                <td>{{ home.name }}</td>
                <td><a href="{{ path('home_show', {'id': home.id}) }}">Afficher</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
