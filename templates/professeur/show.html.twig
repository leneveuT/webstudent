{% extends 'base.html.twig' %}

{% block title %}{{ professeur.prenom }} {{ professeur.nom }}{% endblock %}

{% block body %}
  <table>
     <tbody>
         <tr>
             <th>Id</th>
             <td>{{ professeur.id }}</td>
         </tr>
         <tr>
             <th>Prenom</th>
             <td>{{ professeur.prenom }}</td>
         </tr>
         <tr>
             <th>Nom</th>
             <td>{{ professeur.nom }}</td>
         </tr>
         <tr>
             <th>Date de naissance</th>
             <td>{{ professeur.dateNaiss|date("d/m/Y") }}</td>
         </tr>
     </tbody>
  </table>
  <h2>Compétences</h2>
  <table class="ui celled table">
    <thead>
      <tr>
          <th>id</th>
          <th>code</th>
          <th>libelle</th>
          <th>Nombre d'étudiants maximum</th>
          <th></th>
      </tr>
    </thead>
      {% for skill in professeur.skills %}
          <tr>
              <td>{{ skill.id }}</td>
              <td>{{ skill.code }}</td>
              <td>{{ skill.libelle }}</td>
              <td>{{ skill.nbEtudiantsMax }}</td>
              <td><a href="{{ path('skill_show', {'id': skill.id}) }}">Afficher</a></td>
          </tr>
      {% endfor %}
  </table>
{% endblock %}
