{% extends 'base.html.twig' %}

{% block title %}Compétences{% endblock %}

{% block body %}
    <table class="ui celled table">
      <thead>
        <tr>
            <th>id</th>
            <th>code</th>
            <th>libelle</th>
            <th>Nombre d'étudiants maximum</th>
            <th></th>
        </tr>
      </thead>
        {% for skill in skills %}
            <tr>
                <td>{{ skill.id }}</td>
                <td>{{ skill.code }}</td>
                <td>{{ skill.libelle }}</td>
                <td>{{ skill.nbEtudiantsMax }}</td>
                <td><a href="{{ path('skill_show', {'id': skill.id}) }}">Afficher</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
